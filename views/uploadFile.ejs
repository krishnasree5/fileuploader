<form action="/upload" method="post" enctype="multipart/form-data">
  <label for="folders" id="folders">Folder</label>

  <% if (locals.folders) { %>
  <select name="folder" id="folder" required>
    <% locals.folders.forEach(folder => { %>
    <option value="<%= JSON.stringify({id: folder.id, name: folder.name}) %>">
      <%= folder.name %>
    </option>
    <% }); %>
  </select>
  <% }else{ %>
  <span>No folders created</span>
  <% } %>

  <input type="file" name="file" required />
  <button type="submit">Upload</button>
</form>
