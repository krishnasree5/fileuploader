<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - File Uploader</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-4">
      <h1>My Folders</h1>

      <div class="mb-3">
        <a href="/create" class="btn btn-primary">Create New Folder</a>
        <a href="/upload" class="btn btn-success">Upload File</a>
        <a href="/logout" class="btn btn-danger">Logout</a>
      </div>

      <div class="row">
        <% if (locals.folders && folders.length > 0) { %> <%
        folders.forEach(folder => { %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= folder.name %></h5>
              <div class="btn-group">
                <a
                  href="/edit/folder/<%= folder.id %>"
                  class="btn btn-warning btn-sm"
                  >Edit</a
                >
                <a
                  href="/delete/folder/<%= folder.id %>"
                  class="btn btn-danger btn-sm"
                  >Delete</a
                >
                <a href="/folder/<%= folder.id %>" class="btn btn-info btn-sm"
                  >View Files</a
                >
              </div>
              <% if (folder.File && folder.File.length > 0) { %>
              <div class="mt-2">
                <small>Files: <%= folder.File.length %></small>
              </div>
              <% } %>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <div class="col-12">
          <p>No folders found. Create your first folder!</p>
        </div>
        <% } %>
      </div>
    </div>
  </body>
</html>
